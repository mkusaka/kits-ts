{
  "name": "kits-ts",
  "version": "0.0.1",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": "https://github.com/mkusaka/kits-ts.git",
  "author": "mkusaka <hinoshita1992@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "build:collection": "yarn workspace collection tsc index.ts",
    "build:util": "yarn workspace util tsc index.ts",
    "build:array": "yarn workspace array tsc index.ts",
    "build:function": "yarn workspace function tsc index.ts",
    "build:number": "yarn workspace number tsc index.ts",
    "build:lang": "yarn workspace lang tsc index.ts",
    "build:object": "yarn workspace object tsc index.ts",
    "build:string": "yarn workspace string tsc index.ts",
    "build:main": "yarn tsc index.ts -d",
    "build": "npm-run-all --parallel build:*",
    "clean:main": "rm index.d.ts index.js",
    "clean": "npm-run-all --parallel clean:*",
    "test:collection": "yarn workspace collection run test",
    "test:util": "yarn workspace util run test",
    "test:array": "yarn workspace array run test",
    "test:function": "yarn workspace function run test",
    "test:number": "yarn workspace number run test",
    "test:lang": "yarn workspace lang run test",
    "test:object": "yarn workspace object run test",
    "test:string": "yarn workspace string run test",
    "test": "npm-run-all --parallel test:*"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
